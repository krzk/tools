#
# Grok-mirror v1.0.0 finishes on every run, so it has to be
# kicked with a timer to provide a continuous updates.
[Unit]
Description=Grok-pull timer for %I
Documentation=https://github.com/mricon/grokmirror

[Timer]
OnBootSec=1min
OnUnitActiveSec=30sec

[Install]
WantedBy=timers.target
